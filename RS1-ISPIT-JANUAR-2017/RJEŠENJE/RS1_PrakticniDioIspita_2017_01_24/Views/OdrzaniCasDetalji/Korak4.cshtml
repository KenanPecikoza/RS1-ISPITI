@model Korak3

    <form action="/Casovi/Korak3Snimi" class="table table-bordered" method="post">
        <div class="form-group">
            <label>Nastavnik</label>
            <input asp-for="Nastavnik" />
        </div>
        <div class="form-group">

            <label>Datum</label>
            <input asp-for="Datum" />
        </div>
        <div class="form-group">
            <label>Odjeljenje/Predmet</label>
            <select asp-for="AngazovanId" asp-items="@Model.OdjeljenjePredmet"></select>
        </div>
        <input type="submit" name="name" value="Snimi" />

    </form>

<div id="ajaxDiv">

</div>

<script >
    $.get("/OdrzaniCasDetalji/Korak4Detalji/@Model.Id", function (data) {
        $("#ajaxDiv").html(data);
    })
</script>