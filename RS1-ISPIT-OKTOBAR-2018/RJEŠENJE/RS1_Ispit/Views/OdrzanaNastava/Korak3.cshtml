
@{
    ViewData["Title"] = "Korak3";
}

<h2>Korak3</h2>
@model Korak3

<form action="/OdrzanaNastava/Korak3Snimi" method="post" class="table table-bordered">
    <div class="form-group">
        <label>Nastavnik</label>
        <input asp-for="@Model.Nastavnik" />
        <input hidden asp-for="@Model.NastavnikId" />
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input asp-for="@Model.Datum" />
    </div>
    <div class="form-group">
        <label>Odjeljenje/Premder</label>
        <select asp-for="@Model.PredajePredmetId" asp-items="@Model.OdjeljenjePremeti" ></select>
    </div>
    <input type="submit"  value="Snimi" class="btn btn-default" />
</form>
