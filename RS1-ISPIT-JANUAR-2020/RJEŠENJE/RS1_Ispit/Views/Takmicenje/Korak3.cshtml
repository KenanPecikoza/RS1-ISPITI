
@{
    ViewData["Title"] = "Korak3";
}

<h2>Korak3</h2>
@model Korak3

<form action="/Takmicenje/Korak3Snimi" method="post">
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Skola</label>
        <input readonly asp-for="@Model.SkolaDomacin" class="form-control">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Predmet</label>
        <select asp-for="@Model.PredmetId" asp-items="@Model.Predmet" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Razred</label>
        <select asp-for="@Model.Razred"class="form-control">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
        </select>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label">Datum</label>
        <input readonly asp-for="@Model.Datum" class="form-control">
    </div>
    <input type="hidden" asp-for="@Model.SkolaDomacinId" a/>
    <input type="submit" class="btn btn-default" value="Odaberi" />
</form>
