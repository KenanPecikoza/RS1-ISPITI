
@{
    ViewData["Title"] = "Korak3";
}

<h2>Korak3</h2>
@model Korak3

<form action="/OdrzanaNastava/Korak3Snimi" class="table table-bordered" method="post">
    <div class="form-group">
        <label>Škola:</label>
        <select asp-for="@Model.SkolaId" asp-items="@Model.Skole"></select>
    </div>
    <div class="form-group">
        <label>Nastavnik:</label>
        <input readonly asp-for="@Model.Nastavnik" />
        <input hidden asp-for="@Model.NastavnikId" />
    </div>
    <div class="form-group">
        <label>Skolska godina:</label>
        <input readonly asp-for="@Model.SkolskaGodina" />
        <input hidden asp-for="@Model.SkolskaGodinaId" />
    </div>
    <div class="form-group">
        <label>Datum:</label>
        <input  asp-for="@Model.Datum" />
    </div>
    <div class="form-group">
        <label>Predmet:</label>
        <select asp-for="@Model.PredmetId" asp-items="@Model.Predmeti"></select>
    </div>
    <input type="submit"  class="btn btn-primary" value="Snimi" />
</form>